#include <iostream>
#include <math.h>
using namespace std;
int triangle(int a,int b,int c,int* perimeter,int* areaToHeronsFormula,bool* examinationForIsosceles){
    if(a+b>c or a+c>b or b+c>a){
        *perimeter=a+b+c;
        *areaToHeronsFormula=sqrt(*perimeter/2*(*perimeter/2-a)*(*perimeter/2-b)*(*perimeter/2-c));
        *examinationForIsosceles=false;
        if ((a==c and a!=b) or (a==b and a!=c) or (b==c and b!=c) or (a==b and b==c)){
            *examinationForIsosceles=true;
        }
    }else{
    cout<<"треугольник не существует";
    return 0;
    }
}
int main(){
    int side_1=3;
    int side_2=2;
    int side_3=3;
    int p;
    int a;
    bool e;
    triangle(side_1,side_2,side_3,&p,&a,&e);
    if (e==1){
        cout<<"равнобедренный треугольник, ";
    }
    else{
        cout<<"не равнобедренный треугольник, ";
    }
    cout<<"периметр:"<<p<<","<<" площадь по формуле Герона:"<<a<<".";
}
